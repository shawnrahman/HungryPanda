<body>
    <div class="container fixed-panel">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 style="text-align:center;">Edit Profile</h4>
            </div>
            <div class="panel-body">
                @if (ViewBag.message != null)
                {
                    <div class="alert alert-info">
                        <strong>@ViewBag.message</strong>
                    </div>
                }
                <div class="box box-info">
                    <div class="box-body">

                        <!-- /input-group -->
                    </div>
                    <div class="col-sm-7">
                        <h4 style="color: grey;">@Model.ResturantOwnerName </h4>
                        </span>
                        <span>
                            <p>Customer</p>
                        </span>
                    </div>


                    @using (Html.BeginForm("edit_resturantowner_profile", "Resturant_Owner", FormMethod.Post,
                                                                                  new { enctype = "multipart/form-data", @class = "form-signin" }))
                    {
                        <div class="clearfix"></div>
                        <hr style="margin:5px 0 5px 0;">


                        <div class="clearfix"></div>
                        <div class="bot-border"></div>


                        <div class="col-sm-5 col-xs-6 tital ">Owner Name:</div>
                        <div class="col-sm-7">
                            <div class="form-group col-sm*">
                                <input class="form-control" name="ResturantOwnerName" id="Name" type="text" value=@Model.ResturantOwnerName>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="bot-border"></div>
                    
                        
                        
                        <div class="col-sm-5 col-xs-6 tital ">Resturant Name:</div>
                        <div class="col-sm-7">
                            <div class="form-group col-sm*">
                                <input class="form-control" name="ResturantName" id="Name" type="text" value=@Model.ResturantName>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="bot-border"></div>





                        <div class="col-sm-5 col-xs-6 tital ">Email:</div>
                        <div class="col-sm-7">
                            <div class="form-group col-sm*">
                                <input class="form-control" name="Email" id="Email" type="text" value=@Model.Email>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="bot-border"></div>
                        <div class="col-sm-5 col-xs-6 tital ">Address:</div>
                        <div class="col-sm-7">
                            <div class="form-group col-sm*">
                                <input class="form-control" name="Address" id="Address" type="text" value=@Model.Address>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="bot-border"></div>
                        <div class="col-sm-5 col-xs-6 tital ">Mobile No:</div>
                        <div class="col-sm-7">
                            <div class="form-group col-sm*">
                                <input class="form-control" name="Phone" id="Phone" type="text" value=@Model.Phone>
                            </div>
                            <button class="btn btn-lg  btn-dark btn-block" type="submit">Update</button>
                        </div>
                    }
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

        </div>
        <script>
            $(function () {
                $('#profile-image1').on('click', function () {
                    $('#profile-image-upload').click();
                });
            });
        </script>




    </div>


    <script type="text/javascript">
    </script>
</body>
</html>
