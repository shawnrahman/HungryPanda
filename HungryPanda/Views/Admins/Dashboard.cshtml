
@using HungryPanda.Models


@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";


    var user = (Admin)Session["user"];

    if (user.Role != "admin" || user.Role == null)
    {
        Response.Redirect("~/Authentication");

    }
}

<div class="row">
    <div class="col-md-3">
        <div class=" " style="margin:10%;  margin-top: 15%;">
            <div class=" card-header">
                Admin Dashboard
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("Admin_profile", "Admins")>Profile</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("edit_admin_profile", "Admins")>Edit Profile</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("change_password","Admins")>Change password</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("addNewAdmin","Admins")>Add new admin</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("addNewResturant","Admins")>Add new Resturant</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("customersList","Admins")>Customers</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("resturantsList","Admins")>Resturants</a>
                </li>
                <li class="list-group-item">
                    <a target="contentFrame" href=@Url.Action("orders_admin", "Admins" )> Orders List</a>
                </li>

                <li class="list-group-item">
                    <a href="../../index.html">
                        <-Back
                    </a>
                </li>
            </ul>



        </div>
    </div>
    <div class="col-md-9">
        <iframe name="contentFrame" scrolling="yes" frameborder="0" width="100%" height="800px" src=@Url.Action("Admin_profile","Admins")></iframe>

    </div>


</div>


@Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
@Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
