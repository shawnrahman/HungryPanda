
@{
                /**/

                Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" type="image/png" href="images/icons/favicon.png" />

    @Styles.Render("~/Content/Site.css")
    @*@Scripts.Render("~/bundles/modernizr")*@

    @Styles.Render("~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css")
    @Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/fonts/themify/themify-icons.css")
    @Styles.Render("~/Content/fonts/Linearicons-Free-v1.0.0/icon-font.min.css")
    @Styles.Render("~/Content/fonts/elegant-font/html-css/style.css")
    @Styles.Render("~/Content/vendor/animate/animate.css")
    @Styles.Render("~/Content/vendor/css-hamburgers/hamburgers.min.css")
    @Styles.Render("~/Content/vendor/animsition/css/animsition.min.css")
    @Styles.Render("~/Content/vendor/select2/select2.min.css")
    @Styles.Render("~/Content/vendor/daterangepicker/daterangepicker.css")
    @Styles.Render("~/Content/vendor/slick/slick.css")
    @Styles.Render("~/Content/vendor/lightbox2/css/lightbox.min.css")
    @Styles.Render("~/Content/css/util.css")
    @Styles.Render("~/Content/css/main.css")

</head>




<body>


    <div class="container " style="width: 70%; height:100% ;margin-top: 150px; ">
        @if (ViewBag.message != null)
        {
            <div class="alert alert-info">
                <strong>@ViewBag.message</strong>
            </div>
        }
        @using (Html.BeginForm("change_password", "Admins", FormMethod.Post,
                                                           new { enctype = "multipart/form-data", @class = "form-signin" }))
        {


            <h1 class="h3 mb-3 font-weight-normal">Change Password</h1>

            <label for="inputPassword" class="sr-only">Password</label>
            <input name="currentPassword" type="password" id="inputPassword" class="form-control" placeholder="Password" required>

            <label for="newPassword" class="sr-only">New Password</label>
            <input name="Password" type="password" id="inputNewPassword" class="form-control" placeholder="New Password" required>

            <label for="confirmNewPassword" class="sr-only">confirm New Password</label>
            <input name="confirmPassword" type="password" id="confirmNewPassword" class="form-control" placeholder="confirm New Password" required>

            <button class="btn btn-lg btn-primary btn-dark btn-block" type="submit">Change Password</button>


        }
    </div>



</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Content/vendor/jquery/jquery-3.2.1.min.js")
@Scripts.Render("~/Content/vendor/animsition/js/animsition.min.js")
@Scripts.Render("~/Content/vendor/bootstrap/js/popper.js")
@Scripts.Render("~/Content/vendor/bootstrap/js/bootstrap.min.js")
@Scripts.Render("~/Content/vendor/select2/select2.min.js")
@Scripts.Render("~/Content/vendor/slick/slick.min.js")
@Scripts.Render("~/Content/js/slick-custom.js")
@Scripts.Render("~/Content/vendor/countdowntime/countdowntime.js")
@Scripts.Render("~/Content/vendor/lightbox2/js/lightbox.min.js")
@Scripts.Render("~/Content/vendor/sweetalert/sweetalert.min.js")
@Scripts.Render("~/Content/js/main.js")
@Scripts.Render("~/bundles/jqueryval")
